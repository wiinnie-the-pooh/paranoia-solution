export COUPLER_ROOT_DIR="/opt/extfoam/r1.3/OpenFOAM-1.6/pbmr/coupler"

export COUPLER_BUILD_CPPFLAGS="-I${LOKI_ROOT_DIR}/include -DLOKI_OBJECT_LEVEL_THREADING"
export COUPLER_BUILD_LDFLAGS="-lstdc++ -lpthread -L${LOKI_ROOT_DIR}/lib -lloki"

export COUPLER_CPPFLAGS="-I${COUPLER_ROOT_DIR} ${COUPLER_BUILD_CPPFLAGS}"
export COUPLER_LDFLAGS="-L${COUPLER_ROOT_DIR} -lcoupler"

export LD_LIBRARY_PATH=${COUPLER_ROOT_DIR}:${LD_LIBRARY_PATH}

